<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#BBECFE"
    android:id="@+id/parent_view">

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/topview">    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="我的家教" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textSize="20sp" />
    </RelativeLayout>

        <TextView
            android:id="@+id/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开的资料" 
            android:layout_marginTop="10.0dip"
            android:layout_marginLeft="10.0dip"/>    
   </LinearLayout>   
        
        
        <!-- 注册项 -->
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="vertical" 
        android:padding="5.0dip"
        android:gravity="center_horizontal"
        android:layout_below="@+id/topview"
        android:layout_above="@+id/register">
        
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
         
    
<!-- 用户名 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal">
<TextView
	android:id="@+id/nicheng"
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="昵称"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/nickName"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 请设置一个您喜欢的昵称"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 所在年级 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="所在年级"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/grade"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 初二"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 头像 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2dip">
<TextView
	android:id="@+id/touxiang"
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="头像"
	android:textColor="#0085B4"/>
<ImageView
	android:id="@+id/uhead"
	android:layout_width="50dip"
	android:layout_height="50dip"
	android:layout_marginLeft="5dip"
	android:gravity="center"
	android:src="@drawable/boy"/>
<TextView
	android:id="@+id/head_portrait"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="3dip"
	android:gravity="center"
	android:textColor="#FFFFFF"
	android:text="设置我的头像"
	android:background="#00B0F0"/>
</LinearLayout> 

<!-- 邮箱 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="邮箱"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/email"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 123@123.com"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 密码 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="密码"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/password01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 111"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 重复密码 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="重复密码"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/password02"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 111"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 手机号 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="手机号"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/phoneNum"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 15088888888"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 性别 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="性别"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/gender"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 女"
	android:background="#00B0F0"/>
</LinearLayout>

<!-- 生日 -->
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_marginTop="2.0dip">
<TextView
	android:layout_width="90dip"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="#FFFFFF"
	android:text="生日"
	android:textColor="#0085B4"/>
<EditText
	android:id="@+id/shenfenNum"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="5dip"
	android:hint=" 2012-08-02"
	android:background="#00B0F0"/>
</LinearLayout>


</LinearLayout>
    </ScrollView>

<Button
    android:id="@+id/register"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip"
    android:layout_alignParentBottom="true"
    android:text="提  交"/>

</RelativeLayout>