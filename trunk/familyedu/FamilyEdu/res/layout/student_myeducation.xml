            android:layout_height="wrap_content"
            android:padding="5.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/uhead"
                android:orientation="vertical" >

                <!-- 第一行 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <!-- 问题数 -->

                    <LinearLayout
                        android:id="@+id/issueview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                        	android:layout_width="wrap_content"
                        	android:layout_height="wrap_content"
                        	android:src="@drawable/datum_a"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问题数" />

                        <TextView
                            android:id="@+id/issueNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57" />
                    </LinearLayout>

                    <!-- 我的老师 -->

                    <LinearLayout
                        android:id="@+id/teacherview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                       <ImageView
                        	android:layout_width="wrap_content"
                        	android:layout_height="wrap_content"
                        	android:src="@drawable/datum_b"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的老师" />

                        <TextView
                            android:id="@+id/teacherNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57" />
                    </LinearLayout>

                    <!-- 我的收藏 -->

                    <LinearLayout
                        android:id="@+id/collectview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >
                       <ImageView
                        	android:layout_width="wrap_content"
                        	android:layout_height="wrap_content"
                        	android:src="@drawable/datum_c"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏" />

                        <TextView
                            android:id="@+id/collectNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57" />
                    </LinearLayout>
                    
                    
                                        <!-- 我的通知 -->
