<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5.0dip">
 <ImageView
     android:id="@+id/uhead"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:src="@drawable/ic_launcher"
     android:layout_centerVertical="true"/>   
    
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/uhead"
    android:layout_toLeftOf="@+id/pic"
    android:layout_centerVertical="true">
    
    <!-- 第一行 -->
  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/issueTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nickname"
        android:layout_toLeftOf="@+id/issuestate"
        android:layout_marginLeft="3.0dip"
        android:text="2012-10-02"/>
    <TextView
        android:id="@+id/issuestate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10.0dip"
        android:text="问题状态"/>
  </RelativeLayout>
    
  <TextView
      android:id="@+id/issueCon"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="问题内容"/>
    <TextView
      android:id="@+id/evaluate"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="评价结果"/>
</LinearLayout>    
    
    <ImageView
        android:id="@+id/pic"
        android:layout_marginLeft="3.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_nowplay"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
</LinearLayout>